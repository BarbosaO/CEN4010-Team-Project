<h1>Books List</h1>
<hr>
<form action= "/book_filter/" method="post">
	<label for="book_author">Enter Author: </label>
	<input bAuthor="book_author" type="text" name="name_field" value="Name of author.">
	<input type="submit" value="OK">
</form>
<% docs.forEach(book => {%>
	<p class = "Title">Title: <%= book.Title %></p>
	<p class = "Author">Author: <%= book.Author %></p>
	<p class = "Date Published">Date Published: <%= book.Date_Published %></p>
	<p class = "Publisher">Publisher: <%= book.Publisher %></p>
	<p class = "Genre">Genre: <%= book.Genre %></p>
	<p class = "Description">Description: <%= book.Description %></p>
	<p class = "Price">Price: <%= book.Price %></p>
	<hr>
<% })%>