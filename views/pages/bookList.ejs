	<body>
<h1>Books List</h1>
<hr>
<form action= "/book_filter/" method="post">
 
	<label for="book_genre">Genre: </label>
	<input bGenre="book_genre" type="text" name="genre">
  <label for="book_author">Author: </label>
  <input bAuthor="book_author" type="text" name="author">
  <label for="book_title">Title: </label>
  <input bTitle="book_title" type="text" name="title">
  <label for="book_avgReview">Min Rating (0-5):</label>
  <input bAvgReview="book_avgReview" type="number" name="avgReview">
	<input type="submit" value="OK">
<hr></hr>

<% docs.forEach(book => {%>
    <img src =" <%= book.Cover %>" width="240" height="300" title="" />
	  <p class = "" ><%= book.Title %></p>
	  <p class = "" >By: <%= book.Author %></p>
	  <p class = "" >Genre: <%= book.Genre %></p>
	  <p class = "" >Price: $<%= book.Price %></p>
    <a class = "" href="/bookDetails/<%=book._id%>"> View Details </a>
    <hr>
<% })%>
   <% include partials/footer.ejs %>
</body>
</html>